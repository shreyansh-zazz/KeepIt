{
  "name": "KeepIt",
  "version": "1.0.0",
  "description": "Self-hosted note-taking webapp",
  "main": "server.js",
  "repository": "https://github.com/shreyansh-zazz/KeepIt.git",
  "author": "Shreyansh Zazz <shreyansh@notesss.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon --exec babel-node api/server.js",
    "build": "babel api -d build",
    "serve": "npm run build && node ./build/server.js",
    "test": "npm run lint-check && echo NoTest",
    "debug": "nodemon --exec babel-node --inspect=0.0.0.0 api/server.js",
    "lint-check": "eslint api/**/*.js",
    "lint": "eslint api/**/*.js --fix"
  },
  "dependencies": {
    "@graphql-modules/core": "^0.7.17",
    "@graphql-tools/merge": "^6.0.10",
    "apollo-server": "^2.15.0",
    "bcrypt": "^5.0.0",
    "graphql": "^15.1.0",
    "graphql-tag": "^2.10.3",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "babel-plugin-import-graphql": "^2.7.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.4"
  }
}
